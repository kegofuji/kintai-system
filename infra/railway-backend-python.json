{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend/python-fastapi/Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/docs",
    "healthcheckTimeout": 300
  },
  "environments": {
    "production": {
      "variables": {
        "SPRING_BOOT_URL": "${{BACKEND_JAVA_URL}}",
        "PORT": "8081"
      }
    }
  }
}
